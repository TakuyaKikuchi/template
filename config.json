{
    "docRoot": {
        "//": "タスク対象となる、開発・公開用のドキュメントルートディレクトリ",
        "pub": "htdocs/",
        "dev": "htdocs_dev/"
    },
    "pug": {
        "//": "監視対象ファイル",
        "files": "**/!(_)*.pug"
    },
    "scss": {
        "//": "scssコンパイル対象ディレクトリ・ファイル",
        "files": "**/!(_)*.scss"
    },
    "js": {
        "//": "監視対象ファイル",
        "files": "**/!(_)*.js"
    },
    "image": {
        "//": "監視対象ファイル",
        "files": "**/images/*"
    },
    "watch": {
        "//": "監視対象ファイル",
        "pug": "**/*.pug",
        "scss": "**/*.scss",
        "img": "**/images/*",
        "js": "**/js/*.js"
    }
}
